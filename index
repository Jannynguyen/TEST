    <script>
        // Form submission handling
        document.getElementById('taskForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const requestNo = document.getElementById('requestNo').value;
            const bu = document.getElementById('bu').value;
            const project = document.getElementById('project').value;
            const emailTitle = document.getElementById('emailTitle').value;
            const user = document.getElementById('user').value;
            const owner = document.getElementById('owner').value;
            const description = document.getElementById('description').value;
            
            // In a real application, you would send this data to a server
            // For this example, we'll just log it and show an alert
            console.log({
                requestNo,
                bu,
                project,
                emailTitle,
                user,
                owner,
                description
            });
            
            alert('Task submitted successfully!');
            
            // Reset the form
            document.getElementById('taskForm').reset();
        });
        
        // Simple example of updating summary data
        function updateSummary() {
            // In a real application, you would fetch this data from a server
            const todayTasks = 12;
            const completedTasks = 8;
            const inProgressTasks = 3;
            const pendingTasks = 1;
            
            document.querySelectorAll('.summary-count')[0].textContent = todayTasks;
            document.querySelectorAll('.summary-count')[1].textContent = completedTasks;
            document.querySelectorAll('.summary-count')[2].textContent = inProgressTasks;
            document.querySelectorAll('.summary-count')[3].textContent = pendingTasks;
        }
        
        // Initialize the page
        updateSummary();
    </script>
